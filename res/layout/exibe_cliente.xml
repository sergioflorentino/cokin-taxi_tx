<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
   <ImageView
        android:id="@+id/foto_cliente"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"                
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginBottom="10dip"
        android:src="@drawable/ic_contact_picture"/>
    
    <TextView
            android:id="@+id/cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/foto_cliente"
            android:text="Cliente"
            android:textColor="#7A7A7A"
            android:textSize="16dip"
            android:textStyle="bold"
            android:typeface="sans" />
    
    <TextView
            android:id="@+id/nome_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="José Antônio"
            android:textColor="#000000"
            android:textSize="20dip"
            android:textStyle="bold"
            android:typeface="sans" />
    
        <TextView
            android:id="@+id/chamadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"            
            android:layout_below="@+id/cliente"            
            android:layout_toRightOf="@+id/foto_cliente"
            android:text="Qtd.Chamadas"
            android:textColor="#7A7A7A"
            android:textSize="16dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chamadas"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/foto_cliente"
            android:text="Telefone"
            android:textColor="#7A7A7A"
            android:textSize="16dip"
            android:textStyle="bold"
            android:typeface="sans" />
        
        <TextView
            android:id="@+id/tit_aval_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telefone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/foto_cliente"
            android:text="Aval.Cliente"
            android:textColor="#7A7A7A"
            android:textSize="16dip"
            android:textStyle="bold"
            android:typeface="sans" />
        
        <TextView
            android:id="@+id/qtd_chamadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/nome_cliente"            
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/chamadas"
            android:gravity="right"
            android:text="1"
            android:textColor="#000000"
            android:textSize="16dip"
            android:typeface="sans" />

        <TextView
        android:id="@+id/nu_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/qtd_chamadas"
        android:gravity="right"
        android:text=" 81 9999.0000"
        android:textColor="#000000"
        android:textSize="16dip"
        android:typeface="sans" />
        
    <RatingBar
        android:id="@+id/aval_cliente"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/nu_telefone"
        android:gravity="right"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="2.0" />



</RelativeLayout>